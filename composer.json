{
    "require-dev": {
        "dompdf/dompdf": "^3.0"
    },
    "require": {
        "phpoffice/phpspreadsheet": "^1.29",
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6",
        "ext-gd": "*", 
        "ext-mbstring": "*", 
        "ext-intl": "*",
        "ext-fileinfo": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 775 storage bootstrap/cache",
            "php artisan optimize"
        ]
    },
    "config": {
        "platform": {
            "php": "8.1" 
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
