# Enable Headers Module
<IfModule mod_headers.c>
  
  # 1. Content Security Policy (CSP)
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://trusted.cdn.com; style-src 'self' https://trusted.cdn.com; img-src 'self' data:; frame-ancestors 'self';"

  # 2. Strict Transport Security (HSTS)
  Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

  # 3. Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # 4. X-Content-Type-Options
  Header set X-Content-Type-Options "nosniff"

  # 5. X-Frame-Options
  Header set X-Frame-Options "DENY"

  # 6. Cross-Origin Resource Policy (CORP)
  Header set Cross-Origin-Resource-Policy "same-origin"

</IfModule>
